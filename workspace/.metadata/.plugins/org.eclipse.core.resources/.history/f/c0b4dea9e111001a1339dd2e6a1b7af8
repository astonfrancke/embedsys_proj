#include "usb_com.h"


void usb_transmit(char * string, uint16_t data_size){
	HAL_UART_Transmit(huart5, string, data_size, 5000);
}

char * usb_receive(void){
	uint8_t buffer[10];
	return HAL_UART_Receive(huart5, (uint8_t *) buffer, Size, Timeout)
}

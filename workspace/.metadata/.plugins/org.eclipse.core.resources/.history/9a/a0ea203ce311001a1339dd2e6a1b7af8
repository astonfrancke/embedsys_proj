 * @date			: 28-November-2019
 ******************************************************************************
 */

#include "usb_com.h"


void usb_transmit(char * string, uint16_t data_size){
	HAL_UART_Transmit(&huart5, string, data_size, 5000);
}

uint8_t * usb_receive(void){
	uint8_t buffer[RCV_BUFFERSIZE];
	HAL_UART_Receive(&huart5, (uint8_t *) buffer, RCV_BUFFERSIZE, 5000);
	return buffer;
}

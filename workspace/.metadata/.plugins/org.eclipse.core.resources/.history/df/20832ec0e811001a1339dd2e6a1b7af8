 ******************************************************************************
 */

#include "usb_com.h"


void usb_transmit(char *string, uint16_t data_size){
	HAL_UART_Transmit(&huart5, (uint8_t*)string, data_size, 5000);
}

char * usb_receive(void){
	char *buffer;
	HAL_UART_Receive(&huart5, &buffer, RCV_BUFFERSIZE, 10000);
	return buffer;
}
